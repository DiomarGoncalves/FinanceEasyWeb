{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ],
  "env": {
    "GOOGLE_CLIENT_ID": "@ID_DO_CLIENTE_DO_GOOGLE",
    "GOOGLE_CLIENT_SECRET": "@GOOGLE_CLIENT_SECRET",
    "GOOGLE_REDIRECT_URI": "@URI_DE_REDIRECIONAMENTO_DO_GOOGLE",
    "DATABASE_URL": "@URL_DO_BANCO_DE_DADOS"
  }
}

