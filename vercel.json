{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.js" },
    { "src": "/credit-cards", "dest": "/public/cartao-credito/index.html" },
    { "src": "/cartao-credito/(.*)", "dest": "/public/cartao-credito/$1" },
    { "src": "/", "dest": "/public/index.html" }
  ]
}
